{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": false,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*.ts"]
  }